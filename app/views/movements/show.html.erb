<!DOCTYPE html>
<html>
<head>
  <title>Rectime</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
#  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <div id="movement-table">
  <% @movements.each do |movement| %>
    <p><%= "Started at #{movement.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S")}" %></p>
      <div id="record">
      <% @records.where(movement_id: movement.id).each do |record| %>
        <p>
          <%= "#{record.id}" %>
          <%= "#{record.point_id}" %>
          <%= "#{record.comment}" %>
          <%= "#{record.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S")}" %>
        </p>
      <% end %>
      </div>
  <% end %>
  </div>
</div>
</body>
</html>
