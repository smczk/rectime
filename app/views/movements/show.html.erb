<!DOCTYPE html>
<html>
<head>
  <title>Rectime</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="body">
  <div id="wrapper">

    <div id="header">
      <h1>Your rectimes</h1>
    </div>

    <div id="main">
      <% @movements.each do |movement| %>
      <div id="movement-table">
        <p><%= "Started at #{movement.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S")}" %></p>
        <% movement.record.each do |record| %>
        <div id="record">
          <p>
          <%= "#{record.id}" %>
          <%= "#{record.point_id}" %>
          <%= "#{record.point.name}" %>
          <%= "#{record.comment}" %>
          <%= "#{record.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S")}" %>
          </p>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>

    <div id="footer">
    </div>
  </div>
</div>
</body>
</html>
